<!DOCTYPE html>
<html lang="es">
    <!-- Llamamos al componente head -->
    <%- include('../../components/head') %>
    <body class="register-page login-page">
        <main class="container-main">
            <div class="container-form">
                <div class="register-title login-title">
                    <h1>Registrarse</h1>
                </div>
                <div class="Register-form login-form">
                    <form action="/api/register" method="POST" id="register-form" class="form-login">
                        <div class="control">
                            <label for="name">Nombre:</label>
                            <input type="text" name="name" id="name" required>
                            <label for="lastname">Apellido:</label>
                            <input type="text" name="lastname" id="lastname" required>
                            <label for="email">Correo:</label>
                            <input type="email" name="email" id="email" required>
                        </div>
                        <div class="control password">
                            <label for="password">Contraseña:</label>
                            <input type="password" name="password" id="password" required>
                            <button class="toggle-show" title="Mostrar contraseña"><i class="eye-icon"></i></button>
                        </div>
                        <div class="actions">
                            <button type="submit">Registrarse</button>
                        </div>
                    </form>
                </div>
                <div class="link-register-form">
                    <p>Volver a la <a href="/">página principal</a></p>
                    <p>o puedes iniciar sesión <a href="/auth/login">aquí</a></p>
                </div>
            </div>
        </main>
        <script src="/js/register-ejs.js"></script>
    </body>
</html>
