<!DOCTYPE html>
<html lang="es">
    <!-- Llamamos al componente head -->
    <%- include('../../components/head') %>
    <body class="login-page">
        <main class="container-main">
            <div class="container-form">
                <div class="login-title">
                    <h1>Iniciar Sesión</h1>
                </div>
                <div class="login-form">         
                    <form action="/api/login" method="POST" class="form-login">
                        <div class="control">
                            <label for="email" aut>Correo:</label>
                            <input type="email" name="email" id="email" required>
                        </div>
                        <div class="control password">
                            <label for="password">Contraseña:</label>
                            <input type="password" name="password" id="password" required>
                            <button class="toggle-show" title="Mostrar contraseña"><i class="eye-icon"></i></button>
                        </div>
                        <div class="actions">
                            <button type="submit" id="loginButton">Iniciar Sesión</button>
                        </div>
                    </form>
                </div>
                <div class="link-register-form">
                    <p>¿No tienes cuenta? <a href="/auth/register">Regístrate aquí</a></p>
                </div>
            </div>
        </main>

        <script src="/js/login.js"></script>
    </body>
</html>
